@page "/"
@layout LoginLayout
@rendermode InteractiveServer

<h1 class="text-center">Bienvenido!</h1>

<div class="text-center">
    <button class="btn btn-primary mx-2" @onclick="RedirigirLogin">Iniciar Sesión</button>
    <button class="btn btn-secondary mx-2" @onclick="RedirigirCrearUsuario">Crear Usuario</button>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; }

    private void RedirigirLogin()
    {
        Navigation.NavigateTo("/Login");
    }

    private void RedirigirCrearUsuario()
    {
        Navigation.NavigateTo("/CrearUsuario");
    }
}
